{
    "name": "Crystal Language",
    "id": "crystal",
    "version": "1.2.0",
    "description": "Installs the Crystal Language and the Shards package manager.",
    "options": {
        "channel": {
            "type": "string",
            "enum": [
                "stable",
                "unstable",
                "nightly"
            ],
            "default": "stable",
            "description": "The Crystal channel to install from."
        },
        "version": {
            "type": "string",
            "default": "latest",
            "proposals": [
                "latest",
                "1.17",
                "1.16",
                "1.15",
                "1.14",
                "1.13",
                "1.12",
                "1.11",
                "1.10",
                "1.9",
                "1.8",
                "1.7",
                "1.6",
                "1.5",
                "1.4",
                "1.3",
                "1.2",
                "1.1",
                "1.0"
            ],
            "description": "The Crystal version to install."
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "crystal-lang.crystal-lang"
            ]
        }
    }
}
